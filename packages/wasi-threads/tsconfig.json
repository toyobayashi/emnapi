{
  "extends": "../shared/tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmitHelpers": true,
    "importHelpers": true,
    "paths": {
      "tslib" : ["../../node_modules/tslib/tslib.d.ts"],
      "@/*": ["./src/*"],
    }
  },
  "include": [
    "./src/**/*"
  ]
}
