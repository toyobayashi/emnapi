{
  "extends": "../shared/tsconfig.base.json",
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "downlevelIteration": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "declaration": true,
    "outDir": "./lib",
    "removeComments": true,
    "importsNotUsedAsValues": "error",
    "paths": {
      "tslib" : ["../../node_modules/tslib/tslib.d.ts"]
    },
    "lib": [
      "ES5",
      "ES2015",
      "ES2020.BigInt",
      "ES2021.WeakRef",
      "DOM"
    ],
    "plugins": [
      {
        "transform": "@tybys/ts-transform-define",
        "defines": {
          "__VERSION__": "\"0.21.1\""
        }
      }
    ]
  },
  "include": [
    "./src/**/*.ts"
  ]
}
