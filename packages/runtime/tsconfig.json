{
  "extends": "../shared/tsconfig.base.json",
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "noEmitHelpers": true,
    "importHelpers": true,
    "moduleResolution": "Bundler",
    "outDir": "lib",
    "paths": {
      "tslib" : ["../../node_modules/tslib/tslib.d.ts"]
    },
    "lib": [
      "ES5",
      "ES2015",
      "ES2020.BigInt",
      "ES2021.WeakRef",
      "DOM"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ]
}
